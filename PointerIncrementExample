#include <iostream>
using namespace std;
int main()
{
    int a[4]{11,22,33,44};
    cout<<"Address of first element of an array: "<<&a[0]<<endl;
    int *ptr=&a[0];
    cout<<"Address of pointer: "<<&ptr<<endl;
    cout<<"Address of first element of an array: "<<ptr<<endl;
    cout<<"Value of first element in array: "<<*ptr<<endl;
    ptr++;
    cout<<"After incrementing Address of second element of an array: "<<ptr<<endl;
    cout<<"After incrementing second element of an array:"<<*ptr<<endl;
    return 0;
}


